        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usuario"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/mensaje1"
        android:layout_width="wrap_content"
